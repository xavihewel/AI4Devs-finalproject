# Variables de entorno para desarrollo local
# Copia este archivo a .env y ajusta los valores según tu configuración

# Base de datos
DATABASE_URL=jdbc:postgresql://localhost:5433/app
DATABASE_USER=app
DATABASE_PASSWORD=app

# OIDC/Keycloak
OIDC_ISSUER_URI=http://localhost:8080/realms/covoituraje
OIDC_JWKS_URI=http://localhost:8080/realms/covoituraje/protocol/openid-connect/certs
OIDC_CLIENT_ID=covoituraje-frontend
OIDC_CLIENT_SECRET=your-client-secret

# Configuración de roles
REQUIRE_ROLE_EMPLOYEE=false

# Frontend
VITE_API_BASE_URL=http://localhost:8081
VITE_OIDC_ISSUER=http://localhost:8080/realms/covoituraje
VITE_OIDC_CLIENT_ID=covoituraje-frontend

# Servicios
TRIPS_SERVICE_URL=http://localhost:8081
USERS_SERVICE_URL=http://localhost:8082
BOOKING_SERVICE_URL=http://localhost:8083
MATCHING_SERVICE_URL=http://localhost:8084

# Redis
REDIS_URL=redis://localhost:6379

# Mailhog (para desarrollo)
MAILHOG_HOST=localhost
MAILHOG_PORT=1025
